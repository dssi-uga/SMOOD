<?xml version="1.0"?>
<robot name="custom_table_top_at_zero">

  <link name="table_link">
    <!-- Keep some inertial values to avoid warnings; adjust mass as you wish -->
    <inertial>
      <origin xyz="0 0 -0.3" rpy="0 0 0"/>
      <mass value="10.0"/>
      <inertia ixx="1" iyy="1" izz="1" ixy="0" ixz="0" iyz="0"/>
    </inertial>

    <!-- ========= Tabletop (top surface at world Z = 0) ========= -->
    <!-- Top thickness 0.05 → center at Z = -0.025 so top lives at 0 -->
    <visual>
      <origin xyz="0 0 -0.025" rpy="0 0 0"/>
      <geometry><box size="0.92 1.02 0.05"/></geometry>
      <material name="wood_top"><color rgba="0.87 0.72 0.53 1"/></material>
    </visual>
    <collision>
      <origin xyz="0 0 -0.025" rpy="0 0 0"/>
      <geometry><box size="0.92 1.02 0.05"/></geometry>
    </collision>

    <!-- ========= Four legs (0.90 high) : span -0.95 .. -0.05 ========= -->
    <!-- Leg centers at Z = -0.50 -->
    <!-- Leg half-size in X/Y = 0.035; tabletop half-sizes = 0.46 and 0.51 -->
    <!-- Leg centers = (±(0.46 - 0.035), ±(0.51 - 0.035)) = (±0.425, ±0.475) -->
    <visual>
      <origin xyz="-0.425 -0.475 -0.50" rpy="0 0 0"/>
      <geometry><box size="0.07 0.07 0.90"/></geometry>
      <material name="wood_leg"><color rgba="0.87 0.72 0.53 1"/></material>
    </visual>
    <visual>
      <origin xyz="-0.425  0.475 -0.50" rpy="0 0 0"/>
      <geometry><box size="0.07 0.07 0.90"/></geometry>
      <material name="wood_leg"/>
    </visual>
    <visual>
      <origin xyz=" 0.425 -0.475 -0.50" rpy="0 0 0"/>
      <geometry><box size="0.07 0.07 0.90"/></geometry>
      <material name="wood_leg"/>
    </visual>
    <visual>
      <origin xyz=" 0.425  0.475 -0.50" rpy="0 0 0"/>
      <geometry><box size="0.07 0.07 0.90"/></geometry>
      <material name="wood_leg"/>
    </visual>

    <!-- Optional leg collisions (one is enough for stability; add all 4 if needed) -->
    <collision>
      <origin xyz="-0.425 -0.475 -0.50" rpy="0 0 0"/>
      <geometry><box size="0.07 0.07 0.90"/></geometry>
    </collision>
    <collision>
      <origin xyz="-0.425  0.475 -0.50" rpy="0 0 0"/>
      <geometry><box size="0.07 0.07 0.90"/></geometry>
    </collision>
    <collision>
      <origin xyz=" 0.425 -0.475 -0.50" rpy="0 0 0"/>
      <geometry><box size="0.07 0.07 0.90"/></geometry>
    </collision>
    <collision>
      <origin xyz=" 0.425  0.475 -0.50" rpy="0 0 0"/>
      <geometry><box size="0.07 0.07 0.90"/></geometry>
    </collision>

  </link>
</robot>
